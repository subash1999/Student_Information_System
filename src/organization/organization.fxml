            <Image url="@../images/blue_background.jpg" />
         </image>
      </ImageView>
      <Button fx:id="browse_btn" layoutX="439.0" layoutY="233.0" mnemonicParsing="false" onMouseClicked="#clickBrowseBtn" styleClass="action-btn" text="Browse" />
