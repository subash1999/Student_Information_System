         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="name_textfield" editable="false" layoutX="14.0" layoutY="127.0" prefHeight="32.0" prefWidth="507.0">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Label layoutX="18.0" layoutY="161.0" text="Established Year:">
         <font>
            <Font size="18.0" />
