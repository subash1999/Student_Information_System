         </font>
      </TextField>
      <Label layoutX="18.0" layoutY="312.0" text="Phone no :">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="phone_textfield" editable="false" layoutX="15.0" layoutY="339.0" prefHeight="32.0" prefWidth="507.0" promptText="9876543210,0123456789">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Button fx:id="save_btn" layoutX="389.0" layoutY="398.0" mnemonicParsing="false" onMouseClicked="#clickSaveBtn" prefHeight="32.0" prefWidth="98.0" styleClass="success" text="Save" />
