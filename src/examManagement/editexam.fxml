<AnchorPane id="AnchorPane" prefHeight="306.0" prefWidth="440.0" stylesheets="@../stylesheet/bootstrap2.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="examManagement.EditexamController">
   <children>
      <Label layoutX="10.0" layoutY="2.0" prefHeight="66.0" prefWidth="316.0" text="Edit Examination" textFill="#29b592">
         <font>
            <Font name="French Script MT" size="50.0" />
         </font>
      </Label>
      <Label layoutX="29.0" layoutY="61.0" text="Enter the identifying name of exam (not appears on marksheet):">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="exam_name" layoutX="27.0" layoutY="87.0" prefWidth="350.0" promptText="eg : - first_term, second_term, etc OR first_ut,second_ut,etc " text="eg : - first_term, second_term, etc OR first_ut,second_ut,etc " />
