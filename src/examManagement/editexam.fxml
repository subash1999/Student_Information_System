      <Label layoutX="32.0" layoutY="207.0" text="Result date :">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="full_exam_name" layoutX="29.0" layoutY="160.0" prefWidth="350.0" promptText="eg:- First Terminal Examination,Second Terminal Examination" />
      <Label layoutX="28.0" layoutY="137.0" text="Full name of exam (appears on marksheet) :">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <Label layoutX="17.0" layoutY="192.0" style="-fx-text-fill: orange;" text="Note : You can use space ( ) here, appears on marksheet " />
   </children>
</AnchorPane>
